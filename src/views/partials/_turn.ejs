<div class="container">
<h2>Dar/Cargar Turno</h2>
<hr>
<form action="cargarTurno" method="POST">
    <div class="form-group">
        <label for="exp">Expediente</label>
        <input type="text" class="form-control" id="exp" name="exp"placeholder="Ej. 700000/21" required>
    </div>
    <div class="form-group">
        <label for="ufi">Unidad Fiscal</label>
        <select class="form-control" id="ufi" name="ufi" required>
            <% units.forEach(function(unit) { %>         
                <option>  <%= unit.unidad %> </option>
              <% }) %>
        </select>
    </div>
    <div class="form-group">
          <label for="fechaTurno">Fecha de turno</label>
          <input type="date" class="form-control" id="fechaTurno" name="date" required>
    </div>
    <div class="form-group">
        <label for="horaTurno">Hora de turno</label>
        <input type="time" class="form-control" id="horaTurno" name="time" required>
    </div>
    <div class="form-group">
        <label for="status">Estado</label>
        <select class="form-control" id="status" name="status" required>       
                <option>  Turno otorgado  </option>
                <option>  Falta comenzar </option>
                <option>  Falta entregar </option>
                <option>  Sin efecto  </option>
                <option>  Archivado  </option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Observaci√≥n</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="observations"></textarea>
    </div>
    
    <div class="form-check">
        <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="check">
            Enviar correo
        </label>
    </div>
    <button type="submit" class="btn btn-secondary lg">Cargar</button>
</form>
</div>